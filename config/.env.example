# Environment Configuration Template
# Copy this file to .env and update with your settings

# Server Configuration
PORT=3000
NODE_ENV=production
SESSION_SECRET=change-this-to-a-random-string-in-production

# OAuth2 Configuration
# Replace localhost with your server IP or domain
OAUTH_CLIENT_ID=webapp-client
OAUTH_CLIENT_SECRET=generate-a-secure-secret-here
OAUTH_AUTH_URL=http://localhost:4000/oauth/authorize
OAUTH_TOKEN_URL=http://localhost:4000/oauth/token
OAUTH_USERINFO_URL=http://localhost:4000/oauth/userinfo
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Database Configuration
DATABASE_PATH=./data/webapp.db
AUTH_DATABASE_PATH=./auth-server/data/oauth.db

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/webapp.log

# HTTPS Configuration (optional)
HTTPS_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# CORS (optional)
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100