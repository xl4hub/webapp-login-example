{
  "name": "webapp",
  "version": "1.0.0",
  "description": "TypeScript + Tailwind CSS Web App",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\" \"npm run dev:client\"",
    "dev:server": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./public/css/styles.css --watch",
    "dev:client": "tsc --watch --project tsconfig.client.json",
    "build": "npm run build:server && npm run build:css && npm run build:client",
    "build:server": "tsc",
    "build:css": "tailwindcss -i ./src/styles.css -o ./public/css/styles.css --minify",
    "build:client": "tsc --project tsconfig.client.json",
    "start": "node dist/server.js",
    "clean": "rm -rf dist public/css/styles.css public/js/app.js"
  },
  "keywords": [
    "typescript",
    "tailwind",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "@types/sqlite3": "^3.1.11",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.19.0",
    "jsonwebtoken": "^9.0.3",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "passport-openidconnect": "^0.1.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.13",
    "@types/passport-oauth2": "^1.8.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
